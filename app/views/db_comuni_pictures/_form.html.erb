<legend>Pictures</legend>
<%= f.simple_fields_for :pictures do |picture_form| %>	
  <% if picture_form.object.photo? #photo exists -> show photo %>
    	<%= image_tag(picture_form.object.photo.url(:small), 
    				:class => "img-rounded", :style => "width:150px;") %>
  <% else %>

  	<%= picture_form.file_field :photo %>	
  <% end %>
    
    <%= picture_form.link_to_remove command_label('fa fa-trash-o','Destroy'), 
					:class => "close", :style => "float:none;line-height:150px;margin-left:20px;",
					data: { confirm: 'Are you sure?'} %>    	
  <hr/>
<% end %>

<br/>

<%= f.link_to_add command_label('icon-plus', "Add Picture"), :pictures, 
		:class=> "btn btn-success", :style => "margin-top:10px;" %>


