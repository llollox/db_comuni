<%= simple_form_for(@object, html: { class: 'form-horizontal' }) do |f| %>
  
  <%= f.input :name, :label => "Name", :placeholder => "Name" %>

  <%= f.input :istat_code, :label => "Istat Code", :placeholder => "Istat Code" %>

  <%= f.input :cadastral_code, :label => "Cadastral Code", :placeholder => "Cadastral Code" %>

  <%= f.input :telephone_prefix, :label => "Telephone Prefix", :placeholder => "Telephone Prefix" %>

  <%= f.association :province, :label => "Province",
      include_blank: false, :selected => @province.id %>

  <%= render "forms/symbol", :f => f %>

  <%= render "forms/territorial_fields", :f => f %>

  <%= render "forms/contact_fields", :f => f %>

  <br/>

  <%= render "forms/create_edit_buttons", :f => f %>
<% end %>