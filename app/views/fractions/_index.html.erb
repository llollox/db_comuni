<legend>Fractions (<%= @fractions.size.to_s %>)</legend>
<%= link_to 'New Province', new_municipality_fraction_path(@municipality), 
  :class => "btn btn-success" if current_user %>
<% if !@fractions.empty? %>

  <%= alphabetical_paginate @alphaParams %>
  <div id="pagination_table">
  <table class="table table-hover table-striped">
    <tr>
      <th>#</th>
      <th>Name</th>
      <% if current_user %>
        <th></th>
        <th></th>
      <% end %>
    </tr>

    <% @fractions.each_with_index do |fraction,index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= fraction.name %></td>
      <% if current_user %>
        <td><%= link_to 'Edit', edit_fraction_path(fraction), 
          :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', fraction, method: :delete, 
          data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
  </div>

<% else %>
<p class="muted">
  <i>No fractions for this municipality!</i>
</p>
<% end %>