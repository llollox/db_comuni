<br/>
<center><h2>List of Regions</h2></center>
<hr/>
<%= link_to 'New Region', new_region_path, 
    :class => "btn btn-success" if current_user %>
<%= alphabetical_paginate @alphaParams %>
<div id="pagination_table">
<table class="table table-hover table-striped">
  <tr>
    <th>#</th>
    <th>Symbol</th>
    <th>Name</th>
    <th>Abbreviation</th>
    <th># Provinces</th>
    <th>Capital</th>
    <% if current_user %>
        <th></th>
        <th></th>
    <% end %>
  </tr>

<% @regions.each_with_index do |region,index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= image_tag(region.symbol.photo.url(:thumb)) %></td>
    <td><%= link_to region.name, region %></td>
    <td><%= region.abbreviation %></td>
    <td><%= region.provinces.size.to_s %></td>
    <td><%= link_to region.capital.name, region.capital %></td>
    <% if current_user %>
        <td><%= link_to 'Edit', edit_region_path(region), 
            :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', region, method: :delete, 
            data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
<br />